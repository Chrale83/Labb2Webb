@page "/customerlogin"
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@rendermode InteractiveServer
@inject NavigationManager Navigation

<h3>CustomerLogin</h3>

<div class="row">
	<div class="mb-5">
		<label>Email</label>
	<InputText class="form-control w-25 me-4" @bind-Value="@LoginCustomer.Email"></InputText>
	</div>

	<div>
		<label>Password</label>
	<InputText class="form-control w-25 " @bind-Value="@LoginCustomer.Password"></InputText>
	</div>




</div>
	<button type="button" onclick="@LoginSubmit" class=" mt-4 btn btn-success">Login</button>
