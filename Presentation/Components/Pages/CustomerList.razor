
@using Presentation.Models
@using MudBlazor
@rendermode InteractiveServer
@inject IDialogService DialogService
@inject NavigationManager Navigation
@page "/customerlist"

<h3>CustomerList</h3>
<div class="text-left mb-2 bg-blue-100">
    <input class="form-control w-25" @bind="SearchText" @oninput="SearchForCustomersName"
            placeholder="Sök efter namn" />
</div>

<MudTable T="CustomerProfileModel"
          Items="@CustomerProfiles"
          Hover="true"
          Breakpoint="Breakpoint.Sm"
          @ref="mudTable"
          RowClass="cursor-pointer"
          @bind-SelectedItem="SelectedCustomer">

    <HeaderContent>
        <MudTh>Namn</MudTh>
        <MudTh>Email</MudTh>
        <MudTh>Telefon nummer</MudTh>
        <MudTh>Adress</MudTh>
        
        
        

    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.FullName</MudTd>
        <MudTd DataLabel="Price">@context.Email </MudTd>
        <MudTd DataLabel="Price">@context.PhoneNumber </MudTd>
        <MudTd DataLabel="Price">@context.FullAdress </MudTd>
        
        
        

    </RowTemplate>
</MudTable>
