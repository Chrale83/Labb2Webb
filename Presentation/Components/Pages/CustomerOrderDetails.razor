@page "/customerorderdetails"
@rendermode InteractiveServer
@using MudBlazor

@if (CustomerOrders == null || !CustomerOrders.Any())
{
    <h3>Kunden har inte gjort några beställningar</h3>
}
else{



<h3 class="ms-5">Order detaljer</h3>

<div class="container">
    @foreach (var order in CustomerOrders)
    {
        <div class="card mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Order id:</strong> @order.OrderId
                    </div>
                    <div class="col-md-6 text-right">
                        <strong>Datum:</strong> @order.PurchaseDate.ToShortDateString()
                    </div>
                </div>
            </div>
            <div class="card-body">
                <h5 class="card-title">Produkter</h5>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Produktnamn</th>
                                <th>Pris</th>
                                <th>Kvantitet</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in order.Products)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                        <td>@(product.ProductPrice * product.Quantity) kr</td>
                                    <td>@product.Quantity</td>
                                </tr>
                            }
                        </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2" class="text-left"><strong>Total summa: @order.TotalPrice kr</strong></td>
                                    <td>
                                        <strong>
                                            
                                        </strong>
                                    </td>
                                </tr>
                            </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
</div>


}



